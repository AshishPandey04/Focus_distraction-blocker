{
  "manifest_version": 3,
  "name": "Distraction Blocker AI",
  "version": "1.0.0",
  "description": "AI-powered website blocker to help you stay focused",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "activeTab",
    "externally_connectable"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "128": "icons/icon.png"
  }
}